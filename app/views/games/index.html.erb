<h1>Listing games</h1>

<table>
  <tr>
    <th>Turn count</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Winner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.turn_count %></td>
    <td><%= game.start_time %></td>
    <td><%= game.end_time %></td>
    <td><%= game.winner_id %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

