<h1>Listing players</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>Ties</th>
    <th>Rating</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.username %></td>
    <td><%= player.wins %></td>
    <td><%= player.losses %></td>
    <td><%= player.ties %></td>
    <td><%= player.rating %></td>
    <td><%= player.color %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

