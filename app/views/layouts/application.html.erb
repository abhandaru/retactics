<!DOCTYPE html>
<html>
<head>
  <title>ReTactics</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery.js' %>
  <%= javascript_include_tag 'constants.js' %>
  <%= javascript_include_tag 'util.js' %>
  <%= javascript_include_tag 'units.js' %>
  <%= javascript_include_tag 'board.js' %>
  <%= javascript_include_tag 'player.js' %>
  <%= javascript_include_tag 'game.js' %>
  <%= javascript_include_tag 'lobby.js' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
	<div class="current-player">
	<% if current_player %>
	  Welcome, <%= link_to current_player.username, :profile %>
	<% else %>
	  Welcome, <span class="accent">Guest</span>
	<% end %>
	</div>
	<div class="retactics-logo">
	  <span class="accent">Re</span>Tactics
	</div>
	<div class="break"></div>
	<div class="player-options">
	  <% if current_player %>
		<%= link_to "Profile", :profile %>
		<%= link_to "Lobby", :lobby %>
	    <%= link_to "Logout", :logout %>
	  <% else %>
	    <%= link_to "Login", :login %>
	    <%= link_to "Register", :register %>	
	  <% end %>	
	  <div class="break"></div>
	</div>
  </div>
<%= yield %>
</body>
</html>
