<%= form_for(@player_session) do |f| %>
  <% if @player_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player_session.errors.count, "error") %> prevented Login</h2>

      <ul>
      <% @player_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'text' %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'text' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'submit', :value => 'Login' %>
  </div>
<% end %>
